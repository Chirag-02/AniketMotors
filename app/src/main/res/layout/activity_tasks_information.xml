<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/disableColor"

    tools:context=".screens.tasksinfo.TasksInformationActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <View
        android:id="@+id/view19"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/white_rectangle_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/taskLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/value_5dp"
        android:fontFamily="@font/helveticamedium"
        android:gravity="center"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/ic_location"
        app:drawableTint="@color/yellowColor"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toTopOf="@+id/view19" />

    <View
        android:id="@+id/view20"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/disableColor"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/taskLocation"
        app:layout_constraintTop_toBottomOf="@+id/taskLocation" />

    <View
        android:id="@+id/view21"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:background="@color/disableColor"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/taskLocation"
        app:layout_constraintTop_toBottomOf="@+id/view20" />

    <View
        android:id="@+id/view23"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/disableColor"
        app:layout_constraintEnd_toEndOf="@+id/view22"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <View
        android:id="@+id/view24"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/disableColor"
        app:layout_constraintEnd_toEndOf="@+id/view30"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/asignedbyTitle"
        app:layout_constraintTop_toBottomOf="@+id/asignedbyTitle" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:fontFamily="@font/helveticamedium"
        android:gravity="center"
        android:text="ABC XYZ"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/ic_profile_user"
        app:drawableTint="#67504C"
        app:layout_constraintBottom_toTopOf="@+id/textView35"
        app:layout_constraintStart_toStartOf="@+id/taskLocation"
        app:layout_constraintTop_toBottomOf="@+id/view20" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/value_5dp"
        android:fontFamily="@font/helveticamedium"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/email"
        app:drawableTint="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/view21"
        app:layout_constraintStart_toStartOf="@+id/textView34"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticabold"
        android:gravity="center"
        android:text="01:43 PM"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView34"
        app:layout_constraintEnd_toEndOf="@+id/view20"
        app:layout_constraintTop_toTopOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticamedium"
        android:text="Daily"
        android:textColor="@color/hintTextColor"
        android:textSize="@dimen/txt_size_11sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView35"
        app:layout_constraintEnd_toEndOf="@+id/textView36"
        app:layout_constraintTop_toTopOf="@+id/textView35" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/value_5dp"
        android:fontFamily="@font/helveticabold"
        android:gravity="center"
        android:text="Task Description"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/taskdescription"
        app:drawableTint="@color/greenColor"
        app:layout_constraintStart_toStartOf="@+id/textView35"
        app:layout_constraintTop_toBottomOf="@+id/view21" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helveticamedium"
        android:text="Daily Reporting to client"
        android:textColor="@color/hintTextColor"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView38"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintEnd_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/imageView21"
        app:srcCompat="@drawable/driection"
        app:tint="@color/primaryColor2" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view19"
        app:layout_constraintEnd_toEndOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/textView39"
        app:srcCompat="@drawable/call"
        app:tint="@color/primaryColor1" />

    <View
        android:id="@+id/view22"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_rectangle_corners"
        app:layout_constraintEnd_toEndOf="@+id/view19"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toBottomOf="@+id/view19" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/value_5dp"
        android:fontFamily="@font/helveticamedium"
        android:gravity="center"
        android:text="Assigned By"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/ic_user"
        app:drawableTint="@color/primaryDarkColor"
        app:layout_constraintStart_toStartOf="@+id/view22"
        app:layout_constraintTop_toTopOf="@+id/view22" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        app:layout_constraintStart_toStartOf="@+id/view23"
        app:layout_constraintTop_toBottomOf="@+id/view23"
        app:srcCompat="@drawable/ic_gmail" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Jaideep Phogat"
        android:textColor="@color/hintTextColor"
        android:fontFamily="@font/helveticamedium"
        android:textSize="@dimen/txt_size_14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView42"
        app:layout_constraintEnd_toEndOf="@+id/view23"
        app:layout_constraintStart_toEndOf="@+id/imageView22"
        app:layout_constraintTop_toBottomOf="@+id/view23" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="14th Oct 2020  1:39 PM"
        android:textColor="@color/hintTextColor"
        android:fontFamily="@font/helveticamedium"
        android:textSize="@dimen/txt_size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        app:layout_constraintEnd_toEndOf="@+id/textView41"
        app:layout_constraintStart_toStartOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />


    <View
        android:id="@+id/view30"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_rectangle_corners"
        app:layout_constraintEnd_toEndOf="@+id/view22"
        app:layout_constraintStart_toStartOf="@+id/view22"
        app:layout_constraintTop_toBottomOf="@+id/view22" />

    <TextView
        android:id="@+id/asignedbyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/value_5dp"
        android:fontFamily="@font/helveticamedium"
        android:gravity="center"
        android:text="Assigned To"
        android:textColor="@color/primaryDarkColor"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/ic_user"
        app:drawableTint="@color/primaryDarkColor"
        app:layout_constraintStart_toStartOf="@+id/view30"
        app:layout_constraintTop_toTopOf="@+id/view30" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view30"
        app:layout_constraintStart_toStartOf="@+id/asignedbyTitle"
        app:layout_constraintTop_toBottomOf="@+id/view24"
        app:srcCompat="@drawable/ic_gmail" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Monti Phogat"
        android:textColor="@color/hintTextColor"
        android:fontFamily="@font/helveticamedium"
        android:textSize="@dimen/txt_size_14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView44"
        app:layout_constraintStart_toEndOf="@+id/imageView23"
        app:layout_constraintTop_toBottomOf="@+id/view24" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticamedium"
        android:text="8802801033"
        android:textColor="@color/hintTextColor"
        android:textSize="@dimen/txt_size_11sp"
        app:layout_constraintBottom_toBottomOf="@+id/view30"
        app:layout_constraintStart_toStartOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <View
        android:id="@+id/view26"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/white_rectangle_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/overdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawablePadding="@dimen/value_5dp"
        android:fontFamily="@font/helveticamedium"
        android:gravity="center"
        android:textColor="@color/primaryDarkColor"
        android:text="@string/overdue"
        android:textSize="@dimen/txt_size_14sp"
        app:drawableStartCompat="@drawable/overdue"
        app:drawableTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view19"
        app:layout_constraintTop_toTopOf="@+id/view26" />

    <TextView
        android:id="@+id/gotoHome"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/primary_dark_rectangle"
        android:fontFamily="@font/helveticabold"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="@string/opencheckin"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/overdue"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/overdue" />


</androidx.constraintlayout.widget.ConstraintLayout>